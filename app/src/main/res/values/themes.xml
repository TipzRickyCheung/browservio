<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.App" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorElement</item>
        <item name="appBarLayoutStyle">@style/Widget.App.Toolbar</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/colorNavigationBar</item>
    </style>

    <style name="Activity.App" parent="Theme.App">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/colorTopBar</item>
        <item name="titleTextColor">@color/colorText</item>
        <item name="navigationIconTint">@color/colorElement</item>
    </style>
</resources>