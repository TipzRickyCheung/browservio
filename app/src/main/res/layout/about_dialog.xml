<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="240dp"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="fill_parent"
        android:layout_height="96dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="@drawable/browservio_banner_back"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        app:srcCompat="@drawable/browservio_banner_front" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="@color/colorBackground_inverted"
        android:textSize="12sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/update_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_ripple"
        android:text="@string/update_btn"
        android:textColor="@color/colorPrimary"
        app:backgroundTint="#00000000" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/license_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_ripple"
        android:text="@string/license_btn"
        android:textColor="@color/colorPrimary"
        app:backgroundTint="#00000000" />

</androidx.appcompat.widget.LinearLayoutCompat>
