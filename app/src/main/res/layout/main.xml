<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/addressBarLinear"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="@color/colorPrimary"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/favicon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="@string/favicon_desp"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:paddingEnd="2dp"
                android:paddingRight="8dp"
                app:srcCompat="@drawable/default_favicon" />

            <ProgressBar
                android:id="@+id/faviconProgressBar"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="@string/favicon_desp"
                android:indeterminate="true"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:paddingEnd="2dp"
                android:paddingRight="8dp"
                android:visibility="gone" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="4dp">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/UrlEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/url_edit_bg"
                    android:gravity="center_vertical"
                    android:hint="@string/address_bar_hint"
                    android:imeOptions="actionGo"
                    android:importantForAutofill="no"
                    android:inputType="textUri|textWebEditText|textNoSuggestions|textEmailAddress"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:weightSum="0" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/fab"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="@string/fab_desp"
                android:focusable="true"
                android:rotation="180"
                app:srcCompat="@drawable/arrow_up" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <HorizontalScrollView
            android:id="@+id/actionBar"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@color/colorPrimary"
            android:scrollbars="none"
            android:visibility="gone"
            android:weightSum="1">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/back_desp"
                    android:hardwareAccelerated="true"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:scaleType="center"
                    app:srcCompat="@drawable/arrow_back_alt" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/forward"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/forward_desp"
                    android:hardwareAccelerated="true"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:rotation="180"
                    android:scaleType="center"
                    app:srcCompat="@drawable/arrow_back_alt" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/reload"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/reload_desp"
                    android:hardwareAccelerated="true"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:scaleType="center"
                    app:srcCompat="@drawable/refresh" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/homepage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/history"
                    android:hardwareAccelerated="true"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:scaleType="center"
                    app:srcCompat="@drawable/home" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/desktop_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/desktop_desp"
                    android:hardwareAccelerated="true"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:scaleType="center"
                    app:srcCompat="@drawable/smartphone" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/clear"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/clear_desp"
                    android:hardwareAccelerated="true"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:scaleType="center"
                    app:srcCompat="@drawable/delete" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/share_desp"
                    android:hardwareAccelerated="true"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:scaleType="center"
                    app:srcCompat="@drawable/share" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/settings"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/settings"
                    android:hardwareAccelerated="true"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:scaleType="center"
                    app:srcCompat="@drawable/settings" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/history"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/history"
                    android:hardwareAccelerated="true"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:scaleType="center"
                    app:srcCompat="@drawable/history" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/fav"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/fav"
                    android:hardwareAccelerated="true"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:scaleType="center"
                    app:srcCompat="@drawable/favorites" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/exit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/exit_desp"
                    android:hardwareAccelerated="true"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:scaleType="center"
                    app:srcCompat="@drawable/close" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </HorizontalScrollView>

        <ProgressBar
            android:id="@+id/MainProg"
            style="?android:progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"
            android:indeterminate="false" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <WebView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hardwareAccelerated="true"
                android:scrollbarStyle="insideOverlay" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
