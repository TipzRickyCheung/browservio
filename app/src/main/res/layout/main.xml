<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/actionBarBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/minTouchTargetSize"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            app:contentInsetEnd="0dp"
            app:contentInsetStart="0dp"
            app:title="@null">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/favicon"
                    android:layout_width="?attr/minTouchTargetSize"
                    android:layout_height="?attr/minTouchTargetSize"
                    android:contentDescription="@string/favicon_desp"
                    android:padding="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/default_favicon" />

                <ProgressBar
                    android:id="@+id/faviconProgressBar"
                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
                    android:layout_width="?attr/minTouchTargetSize"
                    android:layout_height="?attr/minTouchTargetSize"
                    android:contentDescription="@string/favicon_desp"
                    android:indeterminate="true"
                    android:padding="8dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="right"
                    app:constraint_referenced_ids="favicon,faviconProgressBar" />

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/UrlEdit"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/url_edit_bg"
                    android:hint="@string/address_bar_hint"
                    android:imeOptions="actionGo|flagNoExtractUi|flagNoFullscreen"
                    android:importantForAutofill="no"
                    android:inputType="textUri|textWebEditText|textNoSuggestions|textEmailAddress"
                    android:padding="8dp"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textColor="@color/colorElement"
                    android:textSize="12dp"
                    app:layout_constraintEnd_toStartOf="@id/fab"
                    app:layout_constraintStart_toEndOf="@id/barrier"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/fab"
                    android:layout_width="?attr/minTouchTargetSize"
                    android:layout_height="?attr/minTouchTargetSize"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="@string/fab_desp"
                    android:padding="8dp"
                    android:rotation="180"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/arrow_up"
                    tools:ignore="RedundantDescriptionCheck" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:id="@+id/actionBarBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTopBar"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/MainProg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appbar">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/actionBar"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:hardwareAccelerated="true"
            android:orientation="horizontal"
            android:scrollbars="none" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/MainProg"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:indeterminate="false"
        android:progressBackgroundTint="#26000000"
        app:layout_constraintBottom_toTopOf="@id/swipe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/actionBarBack" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/MainProg"
        app:swipeRefreshLayoutProgressSpinnerBackgroundColor="@color/colorAccent"
        tools:layout_behavior="@string/appbar_scrolling_view_behavior">

        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarStyle="insideOverlay" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
