<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/addressBarLinear"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="@color/colorPrimary"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/favicon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="@string/favicon_desp"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:paddingEnd="2dp"
                android:paddingRight="2dp"
                app:srcCompat="@drawable/outline_public_24" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="4dp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/UrlEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/url_edit_bg"
                    android:gravity="center_vertical"
                    android:hint="@string/address_bar_hint"
                    android:imeOptions="actionGo"
                    android:importantForAutofill="no"
                    android:inputType="textUri|textWebEditText|textNoSuggestions|textEmailAddress"
                    android:singleLine="true"
                    android:textColor="@color/colorBackground_inverted"
                    android:textSize="12sp"
                    android:weightSum="0" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/browse"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="@string/browse_desp"
                android:focusable="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/outline_search_24" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="@string/fab_desp"
                android:focusable="true"
                android:rotation="180"
                app:srcCompat="@drawable/outline_arrow_up_24" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <HorizontalScrollView
            android:id="@+id/actionBar"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@color/colorPrimary"
            android:scrollbars="none"
            android:visibility="gone"
            android:weightSum="1">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/back_desp"
                    android:hardwareAccelerated="true"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:scaleType="center"
                    app:srcCompat="@drawable/outline_arrow_back_24" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/forward"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/forward_desp"
                    android:hardwareAccelerated="true"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:rotation="180"
                    android:scaleType="center"
                    app:srcCompat="@drawable/outline_arrow_back_24" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/reload"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/reload_desp"
                    android:hardwareAccelerated="true"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:scaleType="center"
                    app:srcCompat="@drawable/outline_refresh_24" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/homepage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/history"
                    android:hardwareAccelerated="true"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:scaleType="center"
                    app:srcCompat="@drawable/outline_home_24" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/desktop_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/desktop_desp"
                    android:hardwareAccelerated="true"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:scaleType="center"
                    app:srcCompat="@drawable/outline_smartphone_24" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/clear"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/clear_desp"
                    android:hardwareAccelerated="true"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:scaleType="center"
                    app:srcCompat="@drawable/outline_delete_24" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/share_desp"
                    android:hardwareAccelerated="true"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:scaleType="center"
                    app:srcCompat="@drawable/outline_share_24" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/settings"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/settings"
                    android:hardwareAccelerated="true"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:scaleType="center"
                    app:srcCompat="@drawable/outline_settings_24" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/history"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/history"
                    android:hardwareAccelerated="true"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:scaleType="center"
                    app:srcCompat="@drawable/outline_history_24" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/fav"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/fav"
                    android:hardwareAccelerated="true"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:scaleType="center"
                    app:srcCompat="@drawable/outline_favorite_border_24" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/exit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/exit_desp"
                    android:hardwareAccelerated="true"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:scaleType="center"
                    app:srcCompat="@drawable/outline_close_24" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </HorizontalScrollView>

        <ProgressBar
            android:id="@+id/MainProg"
            style="?android:progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"
            android:indeterminate="false" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <WebView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hardwareAccelerated="true"
                android:scrollbarStyle="insideOverlay" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
